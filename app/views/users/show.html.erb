<p id="notice"><%= notice %></p>

<h2><%= @user.username%></h2>
<% if @user.ratings.empty?%>
	Has not rated beers.
<% else%>
	<p>Has made <%= pluralize(@user.ratings.count, 'rating') %>,
 	average <%= @user.average_rating %> </p>
<% end %>

<h3>ratings</h3>
<ul>
	<% @user.ratings.each do |rating| %>
		<li> <%= rating.beer.name %> <%= rating.score %> <%= link_to 'delete', rating, :method => :delete, data: {confirm: 'Are you sure?'} %> </li>	
<% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
